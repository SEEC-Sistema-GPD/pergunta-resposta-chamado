{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@domain/*": [
        "./domain/*"
      ],
      "@controllers/*": [
        "./presentation/controllers/*"
      ],
      "@infra/*": [
        "./infra/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
