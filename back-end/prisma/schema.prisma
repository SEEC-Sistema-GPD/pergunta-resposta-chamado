generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categorias {
  nome      String      @unique
  createdAt DateTime    @default(now())
  deletedAt DateTime?
  updatedAt DateTime    @updatedAt
  id        Int         @id @unique @default(autoincrement())
  respostas respostas[]
}

model logs {
  id            Int       @id @default(autoincrement())
  operacao      String?
  resposta_id   String?
  usuario       String?
  data_operacao DateTime? @default(now())
  descricao     String?
}

model respostas {
  titulo       String
  descricao    String
  causa        String
  resposta     String
  passos       String
  createdAt    DateTime   @default(now())
  deletedAt    DateTime?
  updatedAt    DateTime   @updatedAt
  id           Int        @id @unique @default(autoincrement())
  categoria_id Int
  categorias   categorias @relation(fields: [categoria_id], references: [id])
}

model usuarios {
  id        Int       @id @default(autoincrement())
  cpf       String    @unique  
  nome      String    
  super     Boolean   @default(false) 
  
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  updatedAt DateTime  @updatedAt
}
