generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/mnt/s/DEV/ATENDIMENTO/chamados_respostas.db"
}

model categorias {
  id        String      @id
  nome      String      @unique(map: "sqlite_autoindex_categorias_1")
  respostas respostas[]
}

model deleted_records {
  id            String    @id
  categoria_id  String?
  titulo        String?
  descricao     String?
  causa         String?
  resposta      String?
  passos        String?
  data_exclusao DateTime? @default(now())
}

model logs {
  id            Int       @id @default(autoincrement())
  operacao      String?
  resposta_id   String?
  usuario       String?
  data_operacao DateTime? @default(now())
  descricao     String?
}

model respostas {
  id           String      @id
  categoria_id String?
  titulo       String
  descricao    String?
  causa        String?
  resposta     String?
  passos       String?
  data_criacao DateTime?   @default(now())
  categorias   categorias? @relation(fields: [categoria_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model usuarios {
  id         Int    @id @default(autoincrement())
  username   String @unique(map: "sqlite_autoindex_usuarios_1")
  login_code String
}
