generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../chamados_respostas.db"
}

model categorias {
  id        Int         @id @unique @default(autoincrement())
  nome      String      @unique
  respostas respostas[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model logs {
  id            Int       @id @default(autoincrement())
  operacao      String?
  resposta_id   String?
  usuario       String?
  data_operacao DateTime? @default(now())
  descricao     String?
}

model respostas {
  id           Int     @id @unique @default(autoincrement())
  titulo       String
  descricao    String
  causa        String
  resposta     String
  passos       String
  // recorrente   Boolean
  categoria_id Int

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  deletedAt  DateTime?
  categorias categorias? @relation(fields: [categoria_id], references: [id])
}

model usuarios {
  id  Int    @id @default(autoincrement())
  cpf String @unique

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
