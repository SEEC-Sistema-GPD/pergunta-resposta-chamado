generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categorias {
  nome      String
  createdAt DateTime    @default(now())
  deletedAt DateTime?
  updatedAt DateTime    @updatedAt
  id        Int         @id @default(autoincrement())
  respostas respostas[]
}

model logs {
  id            Int       @id @default(autoincrement())
  operacao      String?
  resposta_id   String?
  usuario       String?
  data_operacao DateTime? @default(now())
  descricao     String?
}

model arquivos {
  id           Int       @id @default(autoincrement())
  nomeOriginal String
  nomeSalvo    String
  url          String
  tamanho      Int
  mimetype     String
  respostaId   Int
  resposta     respostas @relation(fields: [respostaId], references: [id])
}

model respostas {
  id           Int        @id @unique @default(autoincrement())
  titulo       String
  descricao    String
  causa        String
  resposta     String
  passos       String
  createdAt    DateTime   @default(now())
  deletedAt    DateTime?
  updatedAt    DateTime   @updatedAt
  categoria_id Int
  categorias   categorias @relation(fields: [categoria_id], references: [id])
  arquivos     arquivos[]
}

enum Perfil {
  C // Usu√°rio comum
  R // Administrador restrito
  M // Administrador master
}

model usuarios {
  id   Int    @id @default(autoincrement())
  cpf  String @unique
  nome String

  perfil Perfil @default(C)

  createdAt DateTime  @default(now())
  deletedAt DateTime?
  updatedAt DateTime  @updatedAt
}

model ramais {
  id        Int       @id @default(autoincrement())
  setor     String
  ramal     String
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  updatedAt DateTime  @updatedAt
}
