datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  loginCode String

  guiasDeResolucao GuiaDeResolucao[]  // Relacionamento com os guias de resolução
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model GuiaDeResolucao {
  id          String    @id @default(cuid())
  titulo      String    // Título do guia de resolução
  descricao   String   // Descrição do problema 
  causa       String   // Causa provável do erro
  resposta    String   // Resposta padrão a ser dada pelo atendente
  passos      String   // Passos a serem seguidos para resolver o problema

  usuario_id  Int
  categoria_id  String
  usuario     Usuario @relation(fields: [usuario_id], references: [id])
  categoria   Categoria @relation(fields: [categoria_id], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
}

model Categoria {
  id    String        @id @default(cuid()) 
  nome  TipoCategoria 
  guiasDeResolucao GuiaDeResolucao[] 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

enum TipoCategoria {
  InstrucoesDeUso
  ErrosComuns
  ConfiguracaoEAcesso
  Solicitacoes
  DuvidasGerais
  ChamadosRecentes
}
